<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff404040"
        android:orientation="horizontal" >
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <org.ros.android.jskAndroidGui.SensorImageViewInfo
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".75"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:gravity="right"
            android:orientation="vertical" >
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radiobutton_L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="left" />

                <RadioButton
                    android:id="@+id/radiobutton_R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="right" />
            </RadioGroup>

            <!-- <LinearLayout android:orientation="horizontal" -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content"> -->

            <Spinner
                android:id="@+id/spinner_spots"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spinner_tasks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:singleLine="true" />
            <!-- android:layout_weight="1" -->
            <!-- android:layout_width="0dp" -->
            <!-- android:lines="1" -->
            <!-- android:singleLine="true" -->
            <!-- android:scrollHorizontally="true" -->
            <!-- android:ellipsize="start" -->


            <!-- </LinearLayout> -->
            <!--
           <LinearLayout android:orientation="horizontal"
			 android:layout_width="fill_parent"
			 android:layout_height="wrap_content">
            -->

            <Spinner
                android:id="@+id/spinner_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:lines="1"
                android:scrollHorizontally="true"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spinner_points"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <!-- </LinearLayout> -->


            <!--
           <Button android:id="@+id/button_demo"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:text="@string/button_label_demo"/>
            -->

            <org.ros.android.view.VirtualJoystickView
                android:id="@+id/joystick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:adjustViewBounds="true" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".15"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/tweet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/twitter_icon"/>

                <Button
                    android:id="@+id/resultyes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yes" />

                <Button
                    android:id="@+id/resultno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No" />
                
                <!--
                <ImageButton
                    android:id="@+id/conversation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/conversation_icon"/> -->
            </LinearLayout>
            <TextView
                android:id="@+id/textarea_test"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".15"
                android:text="param update searching" >
            </TextView>
            <!--
               <Button android:id="@+id/nobutton"
	   	       android:layout_width="wrap_content"
	   	       android:layout_height="wrap_content"
	   	       android:text="Nobutton"
	  	       android:visibility="gone"/>
            -->


            <!--
           <ImageView
      	      android:layout_width="fill_parent"
      	      android:layout_height="wrap_content"
      	      android:gravity="center"
      	      android:src="@drawable/joystick_white"
     	      android:id="@+id/imagearea"/>
            -->
        </LinearLayout>
     </LinearLayout>

</LinearLayout>